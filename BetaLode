package com.mycompany.lodebeta;

import java.util.Scanner;

/**
 *
 * @author Lukas
 */
public class LodeBeta {

    static final char VOLNO = 'O';
    static final char OBSAZENO = '*';
    static final int LOD_DELKA = 3;
    static Scanner vstup = new Scanner(System.in);

    public enum Volba {
        KONEC, HORIZONTAL, VERTIKAL;
    }

    public static void main(String[] args) {
        while (true) {

            System.out.print("Zadejte pocet radku (0 pro konec): ");
            int pocetRadku = vstup.nextInt();
            if (opakovaniPole(pocetRadku)) {
                break;
            }

        }

    }

    private static boolean opakovaniPole(int pocetRadku) {
        if (pocetRadku == 0) {
            System.out.println(Volba.KONEC);
            return true;
        } else {
            System.out.print("Zadejte pocet sloupcu: ");
            int pocetSloupcu = vstup.nextInt();
            System.out.print("Zadejte pocet lodi: ");
            int pocetLodi = vstup.nextInt();
            System.out.println("Horizontalni -> 0\nVertikalni -> 1 ");
            int konfig = vstup.nextInt();

            Volba volba = volbaUzivatele(konfig);
                

            char[][] hraciPole = poleLode(pocetRadku, pocetSloupcu, pocetLodi, volba);
            System.out.println("Vysledne hraci pole: ");

            vypisPole(hraciPole);
        }
        return false;
    }

    private static Volba volbaUzivatele(int konfig) {
        Volba volba;
        switch (konfig) {
            case 0 -> volba = Volba.HORIZONTAL;
            case 1 -> volba = Volba.VERTIKAL;
            default -> {
                System.out.println("Spatna volba, zkus znovu");
                return volbaUzivatele(konfig);
            }
        }
        return volba;
    }

    private static char[][] poleLode(int pocetRadku, int pocetSloupcu, int pocetLodi, Volba volba) {
        char[][] hraciPole = new char[pocetRadku][pocetSloupcu];
        for (int i = 0; i < hraciPole.length; i++) {
            for (int j = 0; j < hraciPole[i].length; j++) {
                hraciPole[i][j] = VOLNO;
            }
        }
        Lode(pocetLodi, pocetRadku, pocetSloupcu, hraciPole, volba);
        return hraciPole;
    }

    private static void Lode(int pocetLodi, int pocetRadku, int pocetSloupcu, char[][] hraciPole, Volba volba) {
        for (int l = 0; l < pocetLodi; l++) {
            boolean umisteno = false;
            int pokus = 0;
            while (!umisteno && pokus < 99) {
                pokus++;
                if (volba == Volba.HORIZONTAL) {
                    umisteno = horizontalniLode(pocetRadku, pocetSloupcu, hraciPole, umisteno);
                } else if (volba == Volba.VERTIKAL) {
                    umisteno = vertikalniLode(pocetRadku, pocetSloupcu, hraciPole, umisteno);
                }
            }
            if(!umisteno){
                System.out.println("Nektere lode se nevesly!");
            }
        }
    }

    private static boolean vertikalniLode(int pocetRadku, int pocetSloupcu, char[][] hraciPole, boolean umisteno) {
        int souradniceX = random(0, pocetRadku - LOD_DELKA);
        int souradniceY = random(0, pocetSloupcu);
        boolean volne = true;
        for (int i = 0; i < LOD_DELKA; i++) {
            if (hraciPole[souradniceX + i][souradniceY] == OBSAZENO) {
                volne = false;
                break;
            }
        }
        if (volne) {
            for (int i = 0; i < LOD_DELKA; i++) {
                hraciPole[souradniceX + i][souradniceY] = OBSAZENO;
            }
            umisteno = true;
        }
        return umisteno;
    }

    private static boolean horizontalniLode(int pocetRadku, int pocetSloupcu, char[][] hraciPole, boolean umisteno) {
        int souradniceX = random(0, pocetRadku);
        int souradniceY = random(0, pocetSloupcu - LOD_DELKA);
        boolean volne = true;
        for (int i = 0; i < LOD_DELKA; i++) {
            if (hraciPole[souradniceX][souradniceY + i] == OBSAZENO) {
                volne = false;
                break;
            }
        }
        if (volne) {
            for (int i = 0; i < LOD_DELKA; i++) {
                hraciPole[souradniceX][souradniceY + i] = OBSAZENO;
            }
            umisteno = true;
        }
        return umisteno;
    }

    private static int random(int min, int max) {
        return (int) (Math.random() * (max - min) + min);
    }

    private static void vypisPole(char[][] pole) {
        for (char[] poleL : pole) {
            for (int j = 0; j < poleL.length; j++) {
                System.out.print(poleL[j] + " ");
            }
            System.out.println();
        }
    }
}
