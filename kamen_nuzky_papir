package com.mycompany.mavenproject1;

/**
 *
 * @author vojta
 */
import java.util.Random;
import java.util.Scanner;

public class Mavenproject1 {

 
/**
* Vytvořte jednoduchou hru „Kámen, nůžky, papír“.
*/
    static Scanner input = new Scanner(System.in); 
    final static int maximalniVelikost = 3;
 
    private enum Volba {
        KAMEN, NUZKY, PAPIR, EXIT, ERROR;
    }
    
    public static void main(String[] args) {
        while (true) {             
            Volba uzivatelVyber = volbaUzivatele();
            if (uzivatelVyber == Volba.EXIT) {
                System.out.println("Hra skončila.");
                break;
            }
 
            Volba botVyber = volbaBot();
            
            System.out.println("Hráč: " + uzivatelVyber);
            System.out.println("POČÍTAČ: " + botVyber);
            System.out.println("------------------------------");
            
            String vysledek = Hra(uzivatelVyber, botVyber);
            System.out.println(vysledek);
        }
    }
    
    private static Volba volbaUzivatele() {
        System.out.println("Vyber si: kámen, nůžky, papír nebo 'exit' pro ukončení");
        String vyber = input.next().toLowerCase();
        switch (vyber) {
            case "kámen":
                return Volba.KAMEN;
            case "nůžky":
                return Volba.NUZKY;
            case "papír":
                return Volba.PAPIR;
            case "exit":
                return Volba.EXIT;
            default: 
                System.out.println("Neplatná volba. Zkus to znovu.");
                return volbaUzivatele();
        }
    }
    
    private static Volba volbaBot() {
        Random random = new Random();
        int vyber = random.nextInt(maximalniVelikost); 
        switch (vyber) {
            case 0:
                return Volba.KAMEN;
            case 1:
                return Volba.NUZKY;
            case 2:
                return Volba.PAPIR;
            default: 
                return Volba.ERROR;       
        }
    }
    
    private static String Hra(Volba uzivatelVolba, Volba vyberBot) {
        if (uzivatelVolba == vyberBot) {
            return "Remíza!";
        }
        switch (uzivatelVolba) {
            case KAMEN:
                return (vyberBot == Volba.NUZKY) ? "Vyhrál hráč" : "Vyhrál AI";
            case NUZKY:
                return (vyberBot == Volba.PAPIR) ? "Vyhrál hráč" : "Vyhrál AI";
            case PAPIR:
                return (vyberBot == Volba.KAMEN) ? "Vyhrál hráč" : "Vyhrál AI";      
            default:
                return "Nastala chyba."; 
        }
    }
}
