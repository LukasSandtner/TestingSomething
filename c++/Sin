#include <iostream>

using namespace std;

int fac(int i)
{
    int F = 1;
    for (int f = 2; f <= 2 * i + 1; f ++) {
		F *= f;
	}
	return F;
}

double sinus(int x)
{
	double sin_x = x;
	double X = x;
	int sign = -1;

	for (int i = 1; i < 15; i++) {
		X *= x * x;
		long int f = 1;
        int F = fac(i);
		double term = X / F;
		sin_x += sign * term;
		sign *= -1;
	}
	return sin_x;
}

int main() {

	double deg, x;
	cout << "Zadej stupne: ";
	cin >> deg;
	x = 3.1415 / 180 * deg;
    double sin_x = sinus(x);

	cout << endl << "Sinus (" << x << ") = " << sin_x << endl;
}
