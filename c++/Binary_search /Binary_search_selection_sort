#include <iostream>


using namespace std;
int main()
{
    int pole[7] = {2, 3, 7, 1, 11, 7, 10};
    
    cout << "Pole:" << endl;
    for(int prvek: pole){
        cout << prvek << " ";
    }
    
    int count = sizeof(pole) / sizeof(pole[0]);
    for (int i = 0; i < count - 1; i++) {
        int min = i;
        for (int j = i + 1; j < count; j++) {
            if(pole[j] < pole[min]){
                min = j;
            }
        }
        int tmp = pole[i];
        pole[i] = pole[min];
        pole[min] = tmp;
    }
    
    cout << endl;
    cout << endl << "Serazene pole:" << endl;
    for(int prvek: pole){
        cout << prvek << " ";
    }
    
    cout << "Kde je prvek: " << endl;
    int x;
    cin >> x;
    int zacatek = 0;
    
    while(zacatek <= count - 1){
        int median = zacatek + (count - zacatek) / 2;
        
        if(pole[median] == x){
            cout << x << " je na " << median + 1 << ". umisteni";
            break;
        } else if(pole[median] < x){
            zacatek = median + 1;
        } else if(pole[median] > x){
            zacatek = median - 1;
        }
        
        
    }
}
